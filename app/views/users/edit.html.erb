<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h2>User info</h2>
<%= form_with model: @user , url: user_path(@user.id), method: :patch do |f| %>
<label for="inputName">Name</label>
<%= f.text_field :name, autofocus: true, id:"inputName"%>
<label for="inputImage">Image</label>
<%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
<label for="inputName">Introduction</label>
<%= f.text_field :introduction, autofocus: true, id:"inputName" %>
<%= f.submit "Update User" %>
<%  end  %>