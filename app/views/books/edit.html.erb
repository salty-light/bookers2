<h2>Editing Book</h2>
<%= form_with model: @book , url: book_path(@book.id), method: :patch do |f| %>
<label for="inputName">Title</label>
<%= f.text_field :title, autofocus: true, id:"inputName"%>

<label for="inputName">Opinion</label>
<%= f.text_field :body, autofocus: true, id:"inputName" %>
<%= f.submit "Update Book" %>
<%= link_to "show", book_path(@book.id)  %>
    <%= link_to "back",books_path(@book.id)  %>
<%  end  %>
