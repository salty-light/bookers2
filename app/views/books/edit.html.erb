<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h2>Editing Book</h2>
<%= form_with model: @book , url: book_path(@book.id), method: :patch do |f| %>
<label for="inputName">Title</label>
<%= f.text_field :title, autofocus: true, id:"inputName"%>

<label for="inputName">Opinion</label>
<%= f.text_field :body, autofocus: true, id:"inputName" %>
<%= f.submit "Update Book" %>
<%= link_to "Show", book_path(@book.id)  %>
    <%= link_to "Back", books_path  %>
<%  end  %>
